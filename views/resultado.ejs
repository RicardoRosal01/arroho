<% if (locals.dados) { %>
<div class="card">
    <div class="card-header">
        Resultado
    </div>
    <div class="card-body">
        <div class="row">
            <div class="card-body">
                <div class="card text-white bg-danger mb-3" style="max-width: 18rem;">
                    <div class="card-header">Consumo Atual</div>
                    <div class="card-body">
                        <h4 class="card-text"><%= dados.energiaAtual %> Joules </h4>
                        <hr>
                        <p class="card-text"><%= dados.trAtual %> TR </p>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="card text-white bg-primary mb-3" style="max-width: 18rem;">
                    <div class="card-header">Consumo Projetado</div>
                    <div class="card-body">
                        <h4 class="card-text"><%= dados.energiaProjetada %> Joules </h4>
                        <hr>
                        <h4 class="card-text"><%= dados.trProjecao %> TR </h4>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="card text-white bg-success mb-3" style="max-width: 18rem;">
                    <div class="card-header">Estimativa de Economia</div>
                    <div class="card-body">
                        <h4 class="card-text"><%= dados.economia %> % </h4>
                        <hr>
                        <h4 class="card-text">$ <%= dados.economiaFinanceira %> </h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% } %>